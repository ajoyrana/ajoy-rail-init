<% content_for :title do %>Amagi | TV Advertising ..<% end %>
<% content_for :description do %>Welcome<% end %>
<%= image_tag "main.jpg" %>
<div class="span4" style="width:100%; height:120px; float:left; margin-top:20px;">
  <table>
  <tr>
  <td>
    <a href="http://www.amagi.com"><%= image_tag "logo.jpg" %></a>
  </td>
  <td><%= image_tag "blank.jpg" %></td>
  <td>
      <%= simple_form_for @visitor do |f| %>
        <%= f.error_notification %>
        <%= f.input :email, label: false, :placeholder => 'Your email address...' %>
        <%= f.submit "Sign up for Amagi newsletter", :class => "btn btn-primary"%>
      <% end %>
  </td>
  </table>
</div>

<div class="span4" style="width:100%; float:left; margin-top:120px;">
<h6>Disclaimer: The name 'Amagi' and related images are used to put this demo application in perspective and will be removed as soon as the application purpose is over.</h6>
</div>
